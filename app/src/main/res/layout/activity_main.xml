<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0f46ff"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mickeystore"
        android:scaleType="centerCrop"
        android:id="@+id/image"

        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mickey Grocery Store"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="#f0ff00"
        android:layout_centerHorizontal="true"
        android:paddingTop="1dp"
        android:id="@+id/text1"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:text='"Where everyone gets something"'
        android:textSize="40sp"
        android:textColor="#f0ff00"
        android:textAlignment="center"
        android:id="@+id/text2"
        android:fontFamily="cursive"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:text="All type of groceries are available. In addition to
groceries, items like copy, pen, variety of snacks, etc are also available.
One can even get discounts and offers on various products."
        android:textSize="28sp"
        android:textColor="#f0ff00"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:id="@+id/text3"
        android:fontFamily="monospace"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/text4"
        android:text="elvis@gmail.com"
        android:textSize="20sp"
        android:textColor="#22ff00"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="4dp"
        ></TextView>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="43dp"
        android:text="Contact Us"
        android:textColor="#22ff00"
        android:textSize="20sp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/text6"
        android:text="Barpeta,India"
        android:textSize="20sp"
        android:textColor="#22ff00"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        ></TextView>

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="43dp"
        android:text="Address"
        android:textColor="#22ff00"
        android:textSize="20sp"></TextView>



</RelativeLayout>